<div class="background-times-square">
	<div class="container dark-background">
	   <div class="row">
		<div class="col-md-4"></div>
		<div class="col-md-4">

				<%= form_for :user, url: '/login' do |f| %>

				<div class="form-group signup-form">

				<% flash.each do |key, value| %>
		            <p class="alert alert-<%= key %>"><%= value %></p>
		          <% end %>
				
				  <h1>Login</h1>
				  <strong>Email: </strong>
				  <%= f.text_field :email, class: "form-control"  %><br>
				  <strong>Password: </strong>
				  <%= f.password_field :password, class: "form-control"  %><br>
				  <%= f.submit "Login", class: "btn btn-default" %><br>
				</div>
				<% end %>



		</div>
		<div class="col-md-4"></div>
	</div>
  </div>
</div>	